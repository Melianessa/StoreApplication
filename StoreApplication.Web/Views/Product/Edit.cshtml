@model StoreApplication.Web.ProductDTOEdit
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<strong>Edit</strong>

<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">
    <div class="form-horizontal">
        <strong>Product</strong>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductDTO.ProductId" />
        <div class="form-group">
            <label asp-for="ProductDTO.ProductName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductDTO.ProductName" class="form-control" />
                <span asp-validation-for="ProductDTO.ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductDTO.ProductDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductDTO.ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDTO.ProductDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductDTO.ProductSortOrder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductDTO.ProductSortOrder" class="form-control" />
                <span asp-validation-for="ProductDTO.ProductSortOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductDTO.ProductCategory" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label class="control-label">ProductCategory</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(@Model.CategoriesDTO, "CategoryId", "CategoryName"), "Select category", new { @class = "form-control" })
                <span asp-validation-for="ProductDTO.ProductCategory" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductDTO.ProductImage" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input class="form-control" type="file" name="pic" accept="image/*" />
                @*<span asp-validation-for="ProductDTO.ProductImage" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

