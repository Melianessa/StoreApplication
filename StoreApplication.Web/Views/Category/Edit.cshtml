            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategorySortOrder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategorySortOrder" class="form-control" />
                <span asp-validation-for="CategorySortOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

